extends templates/layout

block csslibs
  link(rel="stylesheet" href="css/catalog/style.css")
  link(rel="stylesheet" href="css/libs/selectize.css")


block jslibs
  script(src="js/libs/jquery.easing.min.js")
  script(src="https://www.dsklad.ru/local/templates/dsklad/js/sly.js")
  script(src="js/libs/selectize.min.js")
  script(src="js/catalog-init.js")


block content
  main
    .ds-wrapper
      ul(class="ds-breadcrumbs")
        li
          a(href="/")
            meta(itemprop="name" content="Главная")
            | Главная
            meta(itemprop="position" content="1")


    .ds-wrapper
      .ds-catalog
        h1 Каталог

        .ds-catalog__menu
          h2 Товары раздела стулья
          .ds-catalog-menu.js-catalog-menu(data-slide="1")
            .ds-catalog-menu__list
              each item in headerMenu.slice(0,1)
                each subitem in item.submenu
                  if (subitem.title === "Все стулья")
                    a(href="catalog-category.html").ds-catalog-menu__item
                      if (subitem.img)
                        img(src= subitem.img alt="")
                      else
                        img(src="images/no-img.jpg" alt="")

                      p= subitem.title

                  else
                    a(href="catalog-inner.html").ds-catalog-menu__item

                      if (subitem.img)
                        img(src= subitem.img alt="")
                      else
                        img(src="images/no-img.jpg" alt="")

                      p= subitem.title

            .ds-catalog-menu__arrow.prev(data-slide="1")
            .ds-catalog-menu__arrow.next(data-slide="1")


        .ds-catalog__menu
          h2 Товары раздела столы
          .ds-catalog-menu.js-catalog-menu(data-slide="2")
            .ds-catalog-menu__list
              each item in headerMenu.slice(1,2)
                each subitem in item.submenu
                  a(href="catalog-category.html").ds-catalog-menu__item
                    if (subitem.img)
                      img(src= subitem.img alt="")
                    else
                      img(src="images/no-img.jpg" alt="")

                    p= subitem.title

            .ds-catalog-menu__arrow.prev(data-slide="2")
            .ds-catalog-menu__arrow.next(data-slide="2")


        .ds-catalog__menu
          h2 Товары раздела свет
          .ds-catalog-menu.js-catalog-menu(data-slide="3")
            .ds-catalog-menu__list
              each item in headerMenu.slice(3,4)
                each subitem in item.submenu
                  a(href="catalog-category.html").ds-catalog-menu__item
                    if (subitem.img)
                      img(src= subitem.img alt="")
                    else
                      img(src="images/no-img.jpg" alt="")

                    p= subitem.title

            .ds-catalog-menu__arrow.prev(data-slide="3")
            .ds-catalog-menu__arrow.next(data-slide="3")

        script(src="js/sly-init.js")

    .ds-catalog-info
      .ds-wrapper
